<h1><%= @post.title %></h1>
<br>
<br>
<br>
<p><%= @post.body %></p>
<br>
<br>
<p>By: <%= @post.author %></p>
<br>
<br><br>
<p>Tags:

<% @post.tags.each_with_index do |t, index| %>
<%= ", " unless index == 0 %><%= t.name %>
<% end %>

</p>
<br><br><br>
<a href="/posts/<%= @post.id %>/edit">Edit the post</a><br><br>

<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete this post">
</form>
<br>



<a href="/">Back to home</a><br><br>
<a href="/posts">Back to all posts</a><br><br>
<a href="/tags">Back to all tags</a>